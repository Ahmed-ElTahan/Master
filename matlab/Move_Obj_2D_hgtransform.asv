clc; clear all; close all;
theta = 0:0.1:2*pi;
r = 1;
x = r*cos(theta);
x2 = [0 .1 .1 0];
y = r*sin(theta);
y2 = [0 0 .1 .1];
g = hgtransform;
g2 = hgtransform;
patch('XData',x,'YData',y,'FaceColor','yellow','Parent',g)
hold on
patch('XData',x2,'YData',y2,'FaceColor','black','Parent',g2)
axis equal
xlim([-10 10])
ylim([-10 10])
pt1 = [-3 -4 0];
pt2 = [5 2 0];
for t=linspace(0,1,100)
  g.Matrix = makehgtform('translate',pt1 + t*(pt2-pt1));
  plot((-3+t*8), (-4+t*6), )
  drawnow
end